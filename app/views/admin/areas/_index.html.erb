<%# area, areas %>
<div class="admin-areas">
	<h1> Areas </h1>
	<% if area.new_record? %>
		<% url_hash = {:url=>admin_areas_path, :remote=>true} %>
	<% else %>
		<% url_hash = {:url=>admin_area_path(area), :method=>:patch, :remote=>true} %>
	<% end %>


	<%= form_for area, url_hash do |f| %>

	<table class="table">
			<tr>
				<th> <%= f.label :name, "name" %> </th>
				<th></th>
			</tr>

			<tr>
				<td> <%= f.text_field :name %> </td>

			<% if area.new_record? %>
				<td>	<%= f.submit 'create', :class=>'btn btn-primary' %> </td>
			<% else %>
				<td>	<%= f.submit 'update', :class=>'btn btn-primary' %> </td>
			<% end %>

			</tr>

			<% areas.each do |a| %>
			<tr>
				<td> <%= a.name %> </td>

				<td> <%= link_to "Edit", edit_admin_area_path(a), :remote=>true, :class=>"btn btn-info" %>
				</td>
				<td> <%= link_to "Delete", admin_area_path(a), :remote=>true, :method=>:delete, :class=>"btn btn-danger", :data=>{:confirm=>"Are you sure?"} %>
				</td>
			</tr>
			<% end %>

	</table>
	<% end %> <%# form_for %>
</div>

